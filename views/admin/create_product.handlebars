<div class="create_product">
<div class="container">
  <form method="POST" action="/product/create/saving">
    <h1 align="center">Product Information</h1>
    <div class="row">   
      <div class="col-25">
        <label for="product_name">Product Name:</label>
      </div>
      <div class="col-75">
        <input id="product_name" name="product_name" type="text" placeholder="Product Name" required >
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="category_id">Category:</label>
      </div>
      <div class="col-75">
        <select id="category_id" name="category_id" required>
          {{#each rows.[0]}}
            <option value="{{this.category_id}}">{{this.category_name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="brand_id">Brand:</label>
      </div>
      <div class="col-75">
       <select id="brand_id" name="brand_id"required>
         {{#each rows.[1]}}
            <option value="{{this.brand_id}}">{{this.brand_name}}</option>
          {{/each}}
        </select>
      </div>
    </div>

     <div class="row">
      <div class="col-25">
        <label for="product_price">Price:</label>
      </div>
      <div class="col-75">
        <input id="product_price" name="product_price" type="number" placeholder="Product Price" required >
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="product_description">Description:</label>
      </div>
      <div class="col-75">
        <textarea id="product_description" name="product_description" placeholder="Write your description. Single quotations are not allowed." style="height:100px"></textarea>
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="brand_tagline">Tagline:</label>
      </div>
      <div class="col-75">
       <input id="brand_tagline" name="brand_tagline" type="text" placeholder="Tagline">
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="product_picture">Product Image:</label>
      </div>
      <div class="col-75">
       <input id="product_picture" name="product_picture" type="text" maxlength="500" placeholder="Product Image URL">
      </div>
    </div>

    <div class="row">
      <div class="col-25">
        <label for="warranty">Warranty:</label>
      </div>
      <div class="col-75">
       <input id="warranty" name="warranty" type="number" placeholder="Warranty">
      </div>
    </div>


    <div class="row">
      <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg" title="Submit">Submit</button>
      </div>
    </div>

  </form>
</div>
</div>
